<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type and Run"
        android:textSize="29dp"
        android:textColor="@color/DarkCyan"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:id="@+id/topv"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topv"
        android:textSize="23dp"
        android:text="Make:"
        android:textColor="@color/DarkGreen"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/makev"
        />
    <EditText
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/makev"
        android:layout_marginLeft="10dp"
        android:id="@+id/maket"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        android:text="Year:"
        android:textColor="@color/DarkGreen"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/maket"
        android:id="@+id/yearv"
        />
    <EditText
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/yearv"
        android:id="@+id/yeart"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        android:text="Color:"
        android:textColor="@color/DarkGreen"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/yeart"
        android:id="@+id/colorv"
        />


    <EditText
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/colorv"
        android:id="@+id/colort"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        android:text="Purchase Price (Â£):"
        android:textColor="@color/DarkGreen"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/colort"
        android:id="@+id/purchsev"
        />


    <EditText
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/purchsev"
        android:id="@+id/purchaset"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        android:text="Engine Size (litre):"
        android:textColor="@color/DarkGreen"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/purchaset"
        android:id="@+id/enginev"

        />

    <EditText
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/enginev"
        android:id="@+id/enginet"
        />

    <Button
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="Create"
        android:padding="18dp"
        android:layout_below="@id/enginet"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:background="@color/BurlyWood"
        android:textColor="@color/DarkCyan"
        android:textSize="18dp"
        android:id="@+id/btncreate"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cd"
        android:layout_below="@id/btncreate"
        android:layout_marginTop="10dp"
        android:text="Car Details:"
        android:layout_marginLeft="10dp"
        android:textSize="24dp"
        android:textColor="@color/Coral"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cd"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/DarkCyan"
        android:id="@+id/show"
        />

</RelativeLayout>

</ScrollView>
